<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    
    
    <VisualBrush 
    x:Key="BoardDotPattern" 
    TileMode="Tile" 
    Viewport="0,0,50,50" 
    ViewportUnits="Absolute" 
    Viewbox="0,0,70,70"
    ViewboxUnits="Absolute">
        <VisualBrush.Visual>
            <Grid  Width="70" Height="80">
                <Ellipse 
                      Fill="#BFBFBF" 
                      Width="7" Height="7" 
                      HorizontalAlignment="Left" 
                      VerticalAlignment="Top"
                      Opacity="0.70"/>
            </Grid>
        </VisualBrush.Visual>
    </VisualBrush>


    <Style x:Key="BoardBackground" TargetType="Rectangle">
        <Setter Property="Fill" Value="{StaticResource BoardDotPattern}"/>
        <Setter Property="Stroke" Value="WhiteSmoke"/>
        <Setter Property="StrokeThickness" Value="12"/>
        <Setter Property="Width" Value="Auto"/>
        <Setter Property="Height" Value="Auto"/>


    </Style>
</ResourceDictionary>