<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">


    <LinearGradientBrush x:Key="LeftColumnBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="Black" Offset="0.0" />
        <GradientStop Color="#121212" Offset="1.0" />
    </LinearGradientBrush>


    <LinearGradientBrush x:Key="CenterColumnBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#2f265b" Offset="0.0" />
        <GradientStop Color="#121212" Offset="1.0" />
    </LinearGradientBrush>


    <LinearGradientBrush x:Key="RightColumnBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="Black" Offset="0.0" />
        <GradientStop Color="#121212" Offset="1.0" />
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="HeaderBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="Black" Offset="0.0"/>
        <GradientStop Color="#121212" Offset="0.5"/>
        <GradientStop Color="#2c2453" Offset="1.0"/>
    </LinearGradientBrush>

    <Style x:Key="ColumnBackgroundRect" TargetType="Rectangle">
        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Setter Property="Stretch" Value="Fill"/>
    </Style>

    
</ResourceDictionary>
