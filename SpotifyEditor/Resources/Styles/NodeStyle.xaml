<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:views="clr-namespace:SpotifyEditor.View.Nodes" xmlns:common="clr-namespace:SpotifyEditor.View.Nodes.Common">
    <Style x:Key="BaseNodeStyle" TargetType="{x:Type views:BaseNodeView}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type views:BaseNodeView}">
                    <Border Width="300" Height="200" CornerRadius="15" Background="#3A3A3A" Padding="10">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="12" ShadowDepth="0" Opacity="0.25" Color="Black"/>
                        </Border.Effect>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="40"/>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="40"/>
                            </Grid.ColumnDefinitions>
                            <Border BorderBrush="#1ED760" BorderThickness="2" CornerRadius="15" Grid.ColumnSpan="3" Visibility="{Binding nodeModel.SelectedNodeBorder, RelativeSource={RelativeSource TemplatedParent}}" Margin="-10" />

                            <TextBlock Text="{Binding nodeModel.Name, RelativeSource={RelativeSource TemplatedParent}}" Grid.Column="1" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,10,0,0" FontSize="18" Foreground="White" TextAlignment="Center" TextWrapping="Wrap" FontWeight="SemiBold"/>
                            <ContentPresenter Grid.Column="0" Grid.ColumnSpan="3" 
                  VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
                  Content="{TemplateBinding Content}" />
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>