<views:BaseNodeView x:Class="SpotifyEditor.View.Nodes.GeneratorNodes.UserTopTracksGeneratorNodeView"
              xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SpotifyEditor.View.Nodes"
             xmlns:ports="clr-namespace:SpotifyEditor.View.Nodes.Ports"
             xmlns:common="clr-namespace:SpotifyEditor.View.Nodes.Common"
             xmlns:views="clr-namespace:SpotifyEditor.View.Nodes"
             xmlns:helpers="clr-namespace:SpotifyEditor.Helpers"
             mc:Ignorable="d" 
             
             Background="Transparent"  
             Style="{StaticResource BaseNodeStyle}">

    <Grid MouseLeftButtonDown="Node_MouseLeftButtonDown" Background="Transparent" HorizontalAlignment="Center" VerticalAlignment="Center" Width="300" Height="200">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="40"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="40"/>
        </Grid.ColumnDefinitions>

        
        
        <common:CloseButtonView Grid.Row="0" Grid.Column="2" HorizontalAlignment="Right" Margin="5"/>

        <StackPanel Width="230" Grid.ColumnSpan="3" VerticalAlignment="Center" Margin="20,30,20,0">
            <common:TimePeriodSliderView DataContext="{Binding}" />


                <StackPanel Orientation="Horizontal" Grid.ColumnSpan="3" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="Select Number Of Tracks:" Foreground="White" FontSize="15" Margin="10,5,3,0" Height="21"/>
                <TextBox  Text="{Binding NumberOfTracksText, UpdateSourceTrigger=PropertyChanged}" 
            x:Name="numberTb"
                          MaxLength="3"
            Width="50" MinHeight="20"
                          
                          PreviewTextInput="NumberTb_PreviewTextInput"
         PreviewKeyDown="NumberTb_PreviewKeyDown"
                              
             Style="{StaticResource NumberOfItemsStyle}"
                helpers:WatermarkService.Placeholder="MAX"
             FontSize="14" FontWeight="Normal"
                     Padding="5"
             Foreground="WhiteSmoke" Background="#222222" 
             BorderThickness="2" 
             />
                </StackPanel>
            

        </StackPanel>

        <StackPanel x:Name="inputPortContainer" Grid.Column="0" VerticalAlignment="Center">
            <ports:InputPortView  />
        </StackPanel>

        <StackPanel x:Name="outputPortContainer" Grid.Column="2" VerticalAlignment="Center">
            <ports:OutputPortView  />
        </StackPanel>



        <StackPanel  Grid.Column="1" VerticalAlignment="Bottom" HorizontalAlignment="Center">
            <Rectangle Fill="{Binding ExecuteIndicatorColor, UpdateSourceTrigger=PropertyChanged}" Width="100" Height="20" />
        </StackPanel>   

    </Grid>

</views:BaseNodeView>
