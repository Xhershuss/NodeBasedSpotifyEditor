<UserControl x:Class="SpotifyEditor.View.Nodes.Common.TimeDurationSlider"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SpotifyEditor.View.Nodes.Common"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="800">
    <StackPanel>

        <TextBlock Text="Select Min Track Duration:" Foreground="White"  FontSize="12"  HorizontalAlignment="Left" Margin="0,10,0,3"/>
        <Slider Grid.ColumnSpan="3" Background="AliceBlue" 
                Style="{StaticResource ModernSlider}"
            Minimum="0" Maximum="900" 
            TickFrequency="1"
            Value="{Binding MinTrackDuration, Mode=OneWayToSource, UpdateSourceTrigger=PropertyChanged}" />

        <TextBlock Text="Select Max Track Duration:" Foreground="White" FontSize="12" HorizontalAlignment="Left" Margin="0,0,0,3"/>
        
        <Slider Grid.ColumnSpan="3" 
                Style="{StaticResource ModernSlider}"
         Minimum="0" Maximum="900" 
         TickFrequency="1"
         Value="{Binding MaxTrackDuration, Mode=OneWayToSource, UpdateSourceTrigger=PropertyChanged}" />
        
        <TextBlock Text="{Binding DurationString , NotifyOnSourceUpdated=True}" Margin="0,-10,0,0" Foreground="White" Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="1" HorizontalAlignment="Center" FontSize="16" FontWeight="DemiBold" VerticalAlignment="Top" />

        </StackPanel>

</UserControl>
