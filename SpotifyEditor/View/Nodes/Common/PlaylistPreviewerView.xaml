<Window x:Class="SpotifyEditor.View.Nodes.Common.PlaylistPreviewerView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:helpers="clr-namespace:SpotifyEditor.Helpers"
        mc:Ignorable="d" 
        Width="400" Height="450"
        WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStartupLocation="CenterScreen">

    <Border CornerRadius="15" BorderBrush="White"  
        BorderThickness="2" MouseDown="Border_MouseDown">
     
        <Border.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="#1E1E1E" Offset="0.0"/>
                <GradientStop Color="#2f265b" Offset="1.0"/>
            </LinearGradientBrush>
        </Border.Background>

        <Grid >

            <Button Content="✔" Foreground="#1E1E1E" Background="#1ED760" Width="30" Height="30" 
            HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,20,20,0"
            Click="Button_Click"/>

            <Button Click="ImageButton_Click" Width="160" Height="160"
        HorizontalAlignment="Center" VerticalAlignment="Top" Margin="40"
        BorderBrush="WhiteSmoke" BorderThickness="2" Background="Transparent">
                <Button.Effect>
                    <DropShadowEffect Color="White" BlurRadius="15" ShadowDepth="0" Opacity="0.6"/>
                </Button.Effect>
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="{TemplateBinding BorderThickness}"
                    CornerRadius="15"
                    ClipToBounds="True">
                            <Border.Background>
                                <ImageBrush ImageSource="{Binding ImagePath, TargetNullValue={x:Null}}" 
                                Stretch="UniformToFill" />
                            </Border.Background>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>




            <StackPanel Margin="20,210,20,0" VerticalAlignment="Top" >


                <TextBox Text="{Binding UserUrl, UpdateSourceTrigger=PropertyChanged}" 
                 
                 Style="{StaticResource PlaylistUserUrlStyle}"
                helpers:WatermarkService.Placeholder="Add Your Profile Url"
                 FontSize="14" FontWeight="Normal"
                         Padding="5"
                 Foreground="WhiteSmoke" Background="#222222"
                 HorizontalAlignment="Center" Width="300"
                 Height="30"
                 BorderThickness="2" 
                 />


                <TextBox Text="{Binding PlaylistTitle, UpdateSourceTrigger=PropertyChanged}"
                     Style="{StaticResource PlaylistTitleStyle}"
                     helpers:WatermarkService.Placeholder="Add a Title"
                     FontSize="20" FontWeight="Bold"
                                           Padding="5"
                     Foreground="WhiteSmoke" Background="#222222"
                     HorizontalAlignment="Center" Width="300"
    
                 Margin="5"/>

                <TextBox Style="{StaticResource PlaylistDescriptionStyle}"
         Text="{Binding PlaylistDescription, UpdateSourceTrigger=PropertyChanged}" 
         helpers:WatermarkService.Placeholder="Add a description"
         TextWrapping="Wrap"
         Margin="2,5,2,0"
         Background="#222222"
         FontSize="14"
         FontWeight="DemiBold"
         TextAlignment="Left"
                         
            VerticalContentAlignment="Top"
         Padding="5"/>

            </StackPanel>
        </Grid>
    </Border>
    
</Window>
